<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hys.hmonkeyys.fastcampus.stopsmoking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StopSmoking">

        <!-- 배너 광고 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity android:name=".activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.RegistrationActivity" />

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Status.Custom" />

        <activity android:name=".activity.CommunityActivity" />

        <activity
            android:name=".activity.BodyChangesActivity"
            android:theme="@style/Theme.Status.Custom" />

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".screen.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/startDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:autoSizeMaxTextSize="22dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22dp"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020년 1월 1일" />

        <TextView
            android:id="@+id/labelStartDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/main_top_start_label"
            android:textColor="@color/dark_grey"
            app:autoSizeMaxTextSize="18dp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@id/startDayTextView"
            app:layout_constraintStart_toEndOf="@+id/startDayTextView" />

        <TextView
            android:id="@+id/labelDDayStartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autoSizeMaxTextSize="24dp"
            android:text="@string/main_top_label"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="@id/startDayTextView"
            app:layout_constraintTop_toBottomOf="@+id/startDayTextView" />

        <TextView
            android:id="@+id/dDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:autoSizeMaxTextSize="32dp"
            android:textColor="@color/main_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@id/labelDDayStartTextView"
            app:layout_constraintStart_toEndOf="@+id/labelDDayStartTextView"
            tools:text="1일" />

        <TextView
            android:id="@+id/labelDDayEndTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:autoSizeMaxTextSize="24dp"
            android:text="@string/main_top_end_label"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@+id/dDayTextView"
            app:layout_constraintStart_toEndOf="@+id/dDayTextView" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:autoSizeMaxTextSize="16dp"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDDayStartTextView"
            tools:text="OOO님 금연에 꼭 성공하세요!" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/main_color_blur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout" />



    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/shareButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/myResolutionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/labelMyResolutionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="18dp"
                    android:background="@drawable/bg_main_rounded_12"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="@string/my_resolution"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/myResolutionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:autoSizeMaxTextSize="24dp"
                    android:gravity="start"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    tools:text="각오합시다각오합시다각오합시다각오합시다" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cigarettesSavedLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/increasedLifespanLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myResolutionLayout">

                <TextView
                    android:id="@+id/labelCigarettesSavedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="18dp"
                    android:background="@drawable/bg_main_rounded_12"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="@string/un_smoked_cigarettes"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/cigarettesSavedTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myResolutionTextView"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/cigarettesSavedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:autoSizeMaxTextSize="24dp"
                    android:gravity="start"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelCigarettesSavedTextView"
                    tools:text="100개비" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/increasedLifespanLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/saveMoneyLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cigarettesSavedLayout">

                <TextView
                    android:id="@+id/labelIncreasedLifespanTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="18dp"
                    android:background="@drawable/bg_main_rounded_12"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="@string/increased_lifespan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/increasedLifespanTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:autoSizeMaxTextSize="24dp"
                    android:gravity="start"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    tools:text="1일 22시간 33분" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saveMoneyLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/labelSaveMoneyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:autoSizeMaxTextSize="18dp"
                    android:background="@drawable/bg_main_rounded_12"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="@string/the_amount_saved"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/saveMoneyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:autoSizeMaxTextSize="24dp"
                    android:gravity="start"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    tools:ignore="RtlSymmetry"
                    tools:text="502,500원" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/editCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/lineView"
        app:layout_constraintEnd_toEndOf="@+id/lineView"
        app:layout_constraintTop_toTopOf="@+id/lineView">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/ic_edit"
            android:backgroundTint="@color/main_color" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bodyChangesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/stop_smoking_after_body_changes"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_accessibility"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/communityLayout"
        app:layout_constraintEnd_toStartOf="@+id/shareButton"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/stop_smoking_share_friends"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_share"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/communityLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bodyChangesButton" />


